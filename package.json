{
  "name": "pokemon-mcp-server",
  "version": "1.0.0",
  "description": "MCP server that fetches Pokemon data and displays it in a React web interface",
  "main": "./build/index.js",
  "type": "module",
  "bin": {
    "pokemon-mcp-server": "./build/cli.js",
    "pokemon-mcp": "./build/cli.js"
  },
  "scripts": {
