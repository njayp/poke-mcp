  "bugs": {
    "url": "https://github.com/nickpowell/pokemon-mcp-server/issues"
  },
  "homepage": "https://github.com/nickpowell/pokemon-mcp-server#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.7.2"
